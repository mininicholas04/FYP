<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <!--image view for displaying user image-->
        <ImageView
            android:id="@+id/foodRecommendImage"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp" />

        <!--text view for displaying first name-->
        <TextView
            android:id="@+id/foodRecommendTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--text view for displaying last name-->
        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/foodRecommendTitle"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="Calories"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <!--text view for displaying user email-->
        <TextView
            android:id="@+id/caloriesKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calories"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="-20dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="kcal"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVProteinName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calories"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="Protein"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVProteinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/caloriesKcal"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="g"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVFatName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVProteinName"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="Fat"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVFatAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVProteinName"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="g"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVCarbohydratesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVProteinName"
            android:layout_marginTop="38dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="Carbohydrates"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/idTVCarbohydratesAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVProteinName"
            android:layout_marginStart="125dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@id/foodRecommendImage"
            android:layout_toRightOf="@id/foodRecommendImage"
            android:text="g"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>